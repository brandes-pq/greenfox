<?xml version="1.0" encoding="UTF-8"?>
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/check-ref-or-content01"
    xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="home" value="\tt\greenfox"/>
    </context>
    <!-- *** Greenfox data playground *** -->
    <domain path="${home}\example-data" name="example-data">

        <!-- *** airports folder *** -->
        <folder foxpath="airports">
            <targetSize count="1" countMsg="Missing 'airports' folder"/>
            <!-- *** airports files *** -->
            <file foxpath="airports*.xml" id="airportsFileShape" mediatype="xml">
                <targetSize minCount="1" minCountMsg="Missing 'airports*.xml files"/>
                <xpath id="hrefOrChildren"
                    expr="//airport[@href and *]" 
                    empty="true"
                    emptyMsg="Airport elements should have EITHER @href OR content"/>
            </file>
        </folder>
    </domain>
</greenfox>
