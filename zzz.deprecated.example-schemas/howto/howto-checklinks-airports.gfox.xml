<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates use of constraint components LastModified...
    
    Constraint components: 
    * LastModifiedLt
    * LastModifiedMatches
        
    Validation catches file modified ...
    * at or after 2020-02-11
    * not between 15:00 and 21:00
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/oxygen/check-catalog"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain"/>
    </context>
    
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="airports" id="airportsFolderFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>            
            <file foxpath=".\\*" id="anyFileShape">
                <lastModified le="2020-02-11" 
                              leMsg="Files must be older than 2020-02-11"
                              matches="^.*T(15|16|17|18|19|20).*$" 
                              matchesMsg="Files must be modified after 18:00 and before 21:00"/>
            </file>
        </folder>
    </domain>

</greenfox>
