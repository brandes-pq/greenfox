<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of LastModified constraints. 
    
    Possible constraint nodes are these attributes on <LastModified>:
        @eq, @lt, @le, @gt, @ge, @like, @notLike, @matches, @notMatches
    Options:
        @flags - flags controling the evaluation of patterns and regular expressions
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/last-modified"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\..\example-data"/>
    </context>
    
    <domain path="${domain}" name="greenfox-example-data">
        
        <!-- Visit: airports folder -->
        <folder foxpath="airports" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>

            <!-- Visit: all files in or under the folder, except a couple of specific files -->
            <file foxpath=".\\(* except *2.xml)" id="anyFileShape">
                <targetSize minCount="138" minCountMsg="Less files than expected"/>
                
                <!-- Check: last modified dates -->
                <lastModified 
                    le="2020-07-08" leMsg="Files must be older than 2020-07-08"
                    gt="2020-04-01" gtMsg="Files must be from 2020-04-01 or later"/>                
            </file>
        </folder>
    </domain>

</greenfox>
