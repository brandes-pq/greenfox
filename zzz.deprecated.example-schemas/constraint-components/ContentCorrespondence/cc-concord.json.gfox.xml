<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of constraint component Concord (ContentCorrespondence). This example
    uses JSON documents as link context as well as link target.
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/concord.json"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>

    <linkDef name="airportGeoDetails"
             hrefXP="href"
             contextXP="//airport/_"
             targetXP="/json/airport/geo"
             mediatype="json">
        <constraints 
            countTargetDocsPerContextPoint="1"
            countTargetNodesPerContextPoint="1"/>
    </linkDef>

    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="airports" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>            
            <file foxpath="airports-ireland.json" mediatype="json" id="countryFileShape">
                <targetSize minCount="1" minCountMsg="Airports folder without expected country file"/>
                
                <contentCorrespondence linkName="airportGeoDetails"
                                       minCountContextNodes="14" 
                                       minCountTargetDocs="14">
                    <valueCord sourceXP="latitude" targetXP="latitude" cmp="eq" maxCountSource="1" countTarget="1"/>
                    <valueCord sourceXP="longitude" targetXP="longitude" cmp="eq" maxCountSource="1" countTarget="1"/>
                </contentCorrespondence>
                
            </file>
        </folder>
    </domain>

</greenfox>
