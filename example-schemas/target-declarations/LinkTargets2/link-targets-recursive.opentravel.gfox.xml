<?xml version="1.0" encoding="UTF-8"?>
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/link-targets-recursive/opentravel"
    xmlns="http://www.greenfox.org/ns/schema">
    
    <context>
        <field name="domain" value="\projects\xsdbase"/>/>
    </context>
    
    <domain path="${domain}" name="greenfox-example-data">
        <folder path="OpenTravel\OpenTravel_2017B_XML" id="xsdFolderShape">
            <targetSize countMsg="Missing folder: OpenTravel XSDs" count="1"/>            
            <file foxpath="*.xsd except (OTA_SimpleTypes.xsd, OTA_Lists.xsd)" id="xsdFileShape">
                <file recursiveLinkXPath="/xs:schema/xs:include/@schemaLocation" id="xsdFileShape">
                    <targetSize minCount="2" 
                                minCountMsg="Not expected number of link targets"
                                targetLinkResolvable="true"
                                targetLinkResolvableMsg="Target links could not be resolved"/>
                    <xpath expr="/xs:schema/@elementFormDefault"
                           eq="qualified"
                           count="1"/>
                </file>
            </file>
        </folder>
    </domain>
    
</greenfox>
