<?xml version="1.0" encoding="UTF-8"?>
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/oxygen/check-catalog"
    xmlns="http://www.greenfox.org/ns/schema">
    
    <context>
        <field name="domain"/>
    </context>
    
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="airports" id="airportsFolderFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>            
            <file foxpath="airports.json" id="airportsFileShape" mediatype="json">
                <file recursiveLinkXPath="//href" id="linkTargetsFileShape" mediatype="json">
                    <targetSize minCount="9" 
                                minCountMsg="Not expected number of link targets"
                                targetLinkResolvable="true"
                                targetLinkResolvableMsg="Target links could not be resolved"/>
                    <xpath expr="//code"
                           exists="true"
                           existsMsg="Missing code value"/>
                </file>
            </file>
        </folder>
    </domain>
    
</greenfox>
