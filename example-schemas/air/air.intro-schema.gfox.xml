<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    A simple schema checking the names and IATA codes of airport files.
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/air-data-domain"
          xmlns="http://www.greenfox.org/ns/schema">
    <context>
        <!-- Default domain -->
        <field name="domain" value="${schemaPath}\..\..\..\example-data"/>
    </context>
    
    <domain path="${domain}" name="air data domain">
        
        <!-- VISIT: 'air' folder -->
        <folder foxpath="air" id="airFolderShape">
            <targetSize count="1" countMsg="Missing folder: air"/>   

            <!-- VISIT: all files except FLAG files -->
            <!--
            <file foxpath=".\\(* except *.FLAG)">
                <targetSize minCount="1" minCountMsg="Expected non-FLAG files"/>
                <fileSize gt="0" gtMsg="Only FLAG files may be empty"/>
            </file>
            -->
            
            <!-- VISIT: all FLAG files -->
            <!--
            <file foxpath=".\\*.FLAG">
                <targetSize minCount="1" minCountMsg="Expected FLAG files"/>
                <fileSize eq="0" gtMsg="FLAG files must be empty"/>
            </file>
            -->

            <!-- VISIT: all STATUS files -->
            <file foxpath=".\\STATUS.txt">
                <targetSize minCount="1" minCountMsg="Expected STATUS files"/>
                <values>
                    <!--
                    <value exprLP="/lines/line[starts-with(., 'status')]/replace(., 'status:\s*', '')" eq="OK"/>
                    -->
                    <value filterLP="starts-with(., 'status')" mapLP="replace(., 'status:\s*', '')" eq="OK" count="1"/>
                    <value filterLP="starts-with(., 'timestamp')" mapLP="replace(., 'timestamp:\s*', '')" datatype="dateTime" count="1"/>
                </values>
            </file>
            
            <!-- VISIT: all XML files -->
            <!--
            <file foxpath=".\\*.xml">
                <targetSize minCount="1" minCountMsg="Expected FLAG files"/>
                <mediatype eq="xml" eqMsg="XML file not well-formed XML"/>
            </file>
            -->
            
        </folder>
    </domain>
</greenfox>
