<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of constraint components Link*, which are represented
    by a <links> element. This example demonstrates how a <links> constraint
    element can reference a link definition via @linkName. The resources are
    contained by an archive file.
    
    A LinksResolvable constraint (@resolvable = true) is violated if any target 
    URIs cannot be resolved. 
    
    A Link*Count constraint (@count*, @minCount*, @maxCount*) checks the number of
    - target resources (* = TargetResources)
    - target docs (* = TargetDocs)    
    - target nodes (* = TargetNodes)
    - link context nodes (* = ContextNodes)
    Target resources, target docs and target nodes are counted per link context node.
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/oxygen/links-resolvable01.use-rel"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>
    
    <linkDef name="airportDetails"
             contextXP="//airport"
             hrefXP="@href"
             mediatype="xml"/>
    
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="archives\airports.zip\#archive#\airports" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>            
            <file foxpath="airports-*.xml" id="airportsFileShape">
                <targetSize count="4" countMsg="Expected exactly four airports documents"/>
                <links linkName="airportDetails"
                       resolvable="true" resolvableMsg="Link not resolvable"
                       minCountTargetDocs="1" minCountTargetDocsMsg="At least one target document expected"/>                
            </file>
        </folder>
    </domain>
</greenfox>
