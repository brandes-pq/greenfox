<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of the LinksResolvable constraint component, as well as
    supplementary constraint components. This example is similar to 
    'cc-link-href.use-rel.gfox.xml', but checks resources contained by an archive file.
    
    See 'cc-link-href.no-mediatype.gfox.xml' for more basic facts about the
    LinksResolvable constraint. 
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/oxygen/links-resolvable01.use-rel"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>
    
    <linkDef name="airportDetails"
             contextXP="//airportsForCountry"
             hrefXP="@href"
             mediatype="xml"/>
    
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="archives\airports.zip\#archive#\airports" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>            
            <file foxpath="airports.xml" id="airportsFileShape">
                <targetSize count="1" countMsg="Missing document, 'airports.xml'."/>
                <links linkName="airportDetails"
                       resolvable="true" resolvableMsg="Link not resolvable"
                       minCountTargetDocs="4" 
                       minCountTargetDocsMsg="At least 4 target documents expected"
                       countTargetDocsPerContextPoint="1" 
                       countTargetDocsPerContextPointMsg="Exactly one target document per context point expected"/>                
            </file>
        </folder>
    </domain>
</greenfox>
