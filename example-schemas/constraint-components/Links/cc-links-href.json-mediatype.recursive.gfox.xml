<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of the LinksResolvable constraint component, as well as
    supplementary constraint components. This example highlights the checking of
    a recursive link definition (@recursive) in JSON documents (@mediatype). 
    A recursive link definition is recursively applied to the target resources. 
    
    See 'cc-link-href.no-mediatype.gfox.xml' for more basic facts about the
    LinksResolvable constraint. 
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/constraint-components/json-mediatype.recursive"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>
  
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="airports" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>            
            <file foxpath="airports.json" id="airportsFileShape" mediatype="json">
                <links hrefXP="//href"
                       recursive="true"
                       mediatype="json"                       
                       resolvable="true" resolvableMsg="Some recursive links cannot be resolved."
                       minCountAllTargetResources="69" minCountAllTargetResourcesMsg="Less target docs than expected"/>
            </file>
        </folder>
    </domain>

</greenfox>
