<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of the LinksResolvable constraint component, as well as
    supplementary constraint components. This example checks resources contained 
    by an archive file. The link definition is recursive (@recursive), and no
    mediatype is specified. In this case a default mediatype of "xml" is assumed. 
    
    See 'cc-link-href.no-mediatype.gfox.xml' for more basic facts about the
    LinksResolvable constraint. 
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/constraint-components/links.href.no-mediatype.recursive.archive"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>
  
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="archives\airports.zip\#archive#\airports" id="airportsFolderShape">
            <targetSize count="1" countMsg="Missing folder: airports"/>            
            <file foxpath="airports.xml" id="airportsFileShape">
                <links hrefXP="//@href"
                       recursive="true"
                       resolvable="true" resolvableMsg="Some recursive links cannot be resolved."
                       minCountTargetDocs="69" minCountTargetDocsMsg="Less target docs than expected"/>
            </file>
        </folder>
    </domain>

</greenfox>
