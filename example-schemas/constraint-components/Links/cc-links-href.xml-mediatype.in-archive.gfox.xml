<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of the LinksResolvable constraint component, as well as
    supplementary constraint components. The optional @mediatype parameter requires 
    link resolution to include a parsing of the link targets into a node tree.
    This example checks resources contained by an archive file. 
    
    See 'cc-link-href.no-mediatype.gfox.xml' for more basic facts about the
    LinksResolvable constraint. 
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/constraint-components/links/xml-mediatype.in-archive"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>
  
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="archives\airports.zip\#archive#\airports" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>            
            <file foxpath=".\\*[//@href]" id="airportsFileShape">
                <links hrefXP="//@href" 
                    mediatype="xml"
                    resolvable="true" resolvableMsg="Link cannot be resolved"
                    minCountTargetDocs="1" minCountTargetDocsMsg="At least one target document expected"/>                
            </file>
        </folder>
    </domain>

</greenfox>
