<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of the LinksResolvable constraint component, as well as
    supplementary constraint components. This example checks resources contained 
    by an archive file. 
    
    See 'cc-link-href.no-mediatype.gfox.xml' for more basic facts about the
    LinksResolvable constraint. 
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/constraint-components/links.href.no-mediatype.archive"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>
  
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="archives\fileExistenceDependencies.zip\#archive#" id="fileExistenceDependenciesFolderShape">
            <targetSize countMsg="Missing folder: fileExistenceDependencies" count="1"/>            
            <file foxpath=".\\*.xml[/docbook:*]" id="docbookFileShape">
                <links hrefXP="//@fileref"
                    resolvable="true" resolvableMsg="A 'fileref' link cannot be resolved."
                    minCountTargetResources="1" minCountTargetResourcesMsg="At least one fileref expected"/>
            </file>
        </folder>
    </domain>

</greenfox>
