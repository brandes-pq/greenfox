<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of ValuePair constraints: declares a ValuePairGe contraint. As the
    quantifier 'someForEach' is used, for each item from value 1 at least one item from value 2 must match
    
    In this example, date consistencies are checked: for each end date, there must be at least one
    milestone with the same date.
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/value-pair.some-for-each"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="projectDates" id="projectDatesFolderShape">
            <targetSize countMsg="Missing folder: projectDates" count="1"/>            
            <file foxpath="projectDates.xml" id="projectDatesShape">
                <targetSize count="1" countMsg="Missing file: projectDates.xml"/>
                <valuePairs>
                    <!-- For each endDate there must be at least milestone with the same date -->
                    <valuePair expr1XP="//project/@endDate" minCount1="0" 
                               expr2XP="../milestone/@date" minCount2="1"
                               expr2Context="#item"
                               quant="someForEach"
                               useDatatype="date"
                               cmp="eq" eqMsg="For each Project end date there must be at least milestone with the same date."
                               />
                </valuePairs>
            </file>
        </folder>
    </domain>

</greenfox>
