<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of ValuePair constraints: declares a ValuePairLt contraint. 
    
    All items of value 1 must be less than the items of value 2. Here, all project start 
    dates (value 1) must be less than a maximum date (value 2).
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/value-pair.lt"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="projectDates" id="projectDatesFolderShape">
            <targetSize countMsg="Missing folder: projectDates" count="1"/>            
            <file foxpath="projectDates.xml" id="projectDatesShape">
                <targetSize count="1" countMsg="Missing file: projectDates.xml"/>
                <valuePairs>
                    <valuePair expr1XP="//project/@endDate" minCount1="1" minCount1Msg="At least one end date expected."
                               expr2XP="/projects/@maxDate" count2="1" count2Msg="maxDate missing."
                               useDatatype="date"
                               cmp="lt" ltMsg="Project end date must be less than maxDate"/>
                </valuePairs>
            </file>
        </folder>
    </domain>

</greenfox>
