<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Same checks as in cc-folderContent.gfox.xml, but written more compactly - using plural forms
    (memberFolders and memberFiles).
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/folderContent.compact"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>
    
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="airports" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>

            <folderContent closed="true">
                <memberFolders names="denmark ireland finland luxembourg"/>                
                <memberFiles names="airports.xml airports.json"/>
                <memberFile name="airports-*.xml" count="4"/>
                <memberFile name="airports-*.json" maxCount="4" minCount="1"/>
                <memberFile name="airports.xml" md5="84DC2E974364915663E1712800B28385"/>
                <memberFile name="airports.json" md5="6127FF438FBC51507DA8077ED706F9B8"/>
            </folderContent>  

            <folder foxpath="denmark">
                <targetSize countMsg="Missing folder: denmark" count="1"/>
                <folderContent closed="true">
                    <memberFiles names="airport-???.xml airport-???.json" minCount="17"/>
                </folderContent>
            </folder>
        </folder>
    </domain>

</greenfox>
