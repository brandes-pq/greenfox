<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of constraint component ExpressionPair, using comparison operators
    'ge' and 'le'. In this simple example, all project start dates must be within given limits.
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/expression-pairs.ge"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="projectDates" id="projectDatesFolderShape">
            <targetSize countMsg="Missing folder: projectDates" count="1"/>            
            <file foxpath="projectDates.xml" id="projectDatesShape">
                <targetSize count="1" countMsg="Missing file: projectDates.xml"/>
                <expressionPairs>
                    <expressionPair expr1XP="//project/@startDate" minCount1="1" 
                                    expr2XP="/projects/@minDate" count2="1"                                    
                                    cmp="ge" geMsg="Project start date must be greater or equal minDate"/>
                    <expressionPair expr1XP="//project/@startDate" minCount1="1" 
                                    expr2XP="/projects/@maxDate" count2="1" 
                                    cmp="le" leMsg="Project start date must be less or equal maxDate"/>
                </expressionPairs>
            </file>
        </folder>
    </domain>

</greenfox>
