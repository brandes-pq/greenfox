<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of constraint components FileSizeXY.
    
    Constraint components:
    * Name:  FileSizeGt 
    - XML:   fileSize/@gt 
    - Check: The file size must be greater than the specified limit
    
    * Name:  FileSizeLe 
    - XML:   fileSize/@le 
    - Check: The file size must be less than or equal to the specified limit
    
    In this example, validation catches 
    * empty files (with size "0").
    * files larger 1000 Bytes
    
    The complete set of file size related constraint components is:
    * FileNameGt - fileSize/@gt
    * FileNameGe - fileSize/@ge
    * FileNameLt - fileSize/@lt
    * FileNameLe - fileSize/@le
    * FileNameEq - fileSize/@eq
    * FileNameNe - fileSize/@ne    
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/file.size"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\..\example-data"/>
    </context>
    
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="airports" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>            
            <file foxpath=".\\*" id="anyFileShape">
                <fileSize gt="0" gtMsg="Empty files not allowed"
                          le="1000" leMsg="Files larger 1000 not allowed"/>
            </file>
        </folder>
    </domain>

</greenfox>

