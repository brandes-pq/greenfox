<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of DocContent constraints.
-->    
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/mediatype"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>
    
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="airports" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>            
            <file foxpath="airports.xml" id="airportsFileShape">
                <docContent>
                    <node locNP="/airports" closed="true">
                        <node locNP="airportsForCountry" count="4"/>                        
                    </node>                    
                </docContent>
            </file>
            <!--
            <file foxpath=".\\airport-???.xml" id="airportFileShape">
                <docContent>
                    <node locNP="/airport">
                        <node locNP="name"/>                        
                        <node locNP="city"/>
                        <node locNP="country"/>
                        <node locNP="geo"/>
                        <node locNP="temporal/timezone"/>
                        <node locNP=".//*zone" maxCount="2"/>
                    </node>
                    <node locNP="//temporal" closed="true">
                        <node locNP="latitude"/>
                        <node locNP="longitude"/>
                        <node locNP="altitude"/>
                    </node>                    
                </docContent>
            </file>
            -->
        </folder>
    </domain>

</greenfox>
