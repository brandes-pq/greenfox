<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of ValuePair constraints: declares a ValuePairNotIn contraint.
    
    The items of value 1 must not be equal to an item from value 2. Here, city IDs must
    not be used also as country IDs.
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/value-pair.notin"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="factbook" id="factbookFolderShape">
            <targetSize countMsg="Missing folder: factbook" count="1"/>            
            <file foxpath="factbook.xml" id="factbookFileShape">
                <targetSize count="1" countMsg="Missing file: factbook.xml"/>
                <valuePairs>
                    <valuePair expr1XP="//city/@id" minCount1="3144" minCount1Msg="Expected more cities."
                               expr2XP="//country/@id" minCount2="231" minCount2Msg="Expected more countries." 
                               cmp="notin" notinMsg="City IDs must not be used also as country IDs."/>
                </valuePairs>
            </file>
        </folder>
    </domain>

</greenfox>
