<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates constraint component: ExprValueEmpty
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/oxygen/check-catalog"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain"/>
    </context>
    
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="airports" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>
   
            <file foxpath="airports.xml" id="airportFileShape">
                <xpath expr="//subCode"
                       empty="true"
                       emptyMsg="Must not contain subCode elements"/>
            </file>
        </folder>
    </domain>

</greenfox>
