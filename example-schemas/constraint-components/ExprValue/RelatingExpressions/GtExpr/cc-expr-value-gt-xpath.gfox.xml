<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates constraint component: ExprValueLength
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/oxygen/check-catalog"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain"/>
    </context>
    
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="projectDates" id="projectDatesFolderShape">
            <targetSize countMsg="Missing folder: projectDates" count="1"/>
   
            <file foxpath="projectDates.xml" id="projectDatesFileShape">
                <xpath expr="//milestone/@date"
                       gtXPath="ancestor::project/@startDate"
                       gtXPathContext="#item"
                       gtXPathMsg="milestone date must be after project start date"
                       ltXPath="ancestor::project/@endDate"
                       ltXPathContext="#item"
                       ltXPathMsg="milestone date must be before project end date"/>                
            </file>
        </folder>
    </domain>

</greenfox>
