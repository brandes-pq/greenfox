<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of constraint component Concord (ContentCorrespondence).
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/concord"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>

    <setRel name="articleExpectations"
            connector="foxpath"
            foxpath="$this\..\fox-sibling('expectation')\expectation-articles.xml"
            linkContextXP="//article"
            linkTargetXP="//article[@id eq $linkContext/articleID]"
            />

    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="msgs1\response" id="responseFolderShape">
            <targetSize countMsg="Missing folder: msgs1\response" count="1"/>            
            <file foxpath="*.xml" id="responseFileShape">
                <targetSize minCount="1" minCountMsg="Response folder without response files"/>
                
                <contentCorrespondence rel="articleExpectations" relCount="1">
                    <content sourceXP="articleName" targetXP="@name" corr="eq"/>
                    <content sourceXP="articlePrice" targetXP="@price" useDatatype="xs:decimal" corr="eq"/>
                </contentCorrespondence>
                
            </file>
        </folder>
    </domain>

</greenfox>
