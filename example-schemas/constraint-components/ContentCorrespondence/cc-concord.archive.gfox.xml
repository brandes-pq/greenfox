<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of constraint component Concord (ContentCorrespondence). This example 
    checks resources contained by an archive file. See example 'cc-concord.gfox.xml' for more 
    information about ContentCorrespondence constraints.
    
    The example also demonstrates how link-defined cardinality constraints can be complemented
    by further cardinality constraints declared in a link-using element.
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/concord.archive"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>

    <linkDef name="airportGeoDetails"
             hrefXP="@href"
             contextXP="//airport"
             targetXP="/*/geo">
        <constraints 
            countTargetResourcesPerContextPoint="1" 
            countTargetDocsPerContextPoint="1"
            countTargetNodesPerContextPoint="1"/>
    </linkDef>

    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="archives\airports.zip\#archive#\airports" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>            
            <file foxpath="airports-ireland.xml" id="contryFileShape">
                <targetSize minCount="1" minCountMsg="Airports folder without expected country file"/>
                
                <contentCorrespondence linkName="airportGeoDetails"
                                       minCountContextNodes="14"
                                       minCountTargetNodes="14">
                    <valueCord sourceXP="@latitude" targetXP="latitude" cmp="eq" maxCountSource="1" countTarget="1"/>
                    <valueCord sourceXP="@longitude" targetXP="longitude" cmp="eq" maxCountSource="1" countTarget="1"/>
                </contentCorrespondence>
                
            </file>
        </folder>
    </domain>

</greenfox>
