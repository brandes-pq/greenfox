<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of constraint component Concord (ContentCorrespondence).
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/concord"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>

    <setRel name="airportGeoDetails"
            connector="links"
            linkXP="@href"
            linkContextXP="//airport"
            linkTargetXP="/*/geo"
            />

    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="airports" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>            
            <file foxpath="airports-ireland.xml" id="responseFileShape">
                <targetSize minCount="1" minCountMsg="Response folder without response files"/>
                
                <contentCorrespondence rel="airportGeoDetails" relCount="1" minCountContextNodes="14" countTargetResources="1" countTargetNodes="1">
                    <content sourceXP="@latitude" targetXP="latitude" corr="eq" countSource="1" countTarget="2"/>
                    <content sourceXP="@longitude" targetXP="longitude" corr="eq"/>
                </contentCorrespondence>
                
            </file>
        </folder>
    </domain>

</greenfox>
