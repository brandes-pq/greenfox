<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of Value constraints. Declares a ValueLike and a ValueCount constraint.
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/value.like"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="projectDates" id="projectDatesFolderShape">
            <targetSize countMsg="Missing folder: projectDates" count="1"/>            
            <file foxpath="projectDates.xml" id="projectDatesShape">
                <targetSize count="1" countMsg="Missing file: projectDates.xml"/>
                <values>
                    <value exprXP="/projects/@department" 
                           count="1" countMsg="Missing @department attribute."  
                           like="KK*-JU" matchesMsg="Department ID should match pattern KK*-JU"/>
                </values>
            </file>
        </folder>
    </domain>

</greenfox>
