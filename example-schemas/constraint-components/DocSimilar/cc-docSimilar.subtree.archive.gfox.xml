<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of constraint component DocSimilar, in particular the comparison
    of substrees. 
    
    This example checks resources contained by an archive file.
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/doc-similar.subtree.archive"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>
    
    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="archives\docSimilar.zip\#archive#\docSimilar" id="docSimilarFolderShape">
            <targetSize countMsg="Missing folder: docSimilar" count="1"/>            
            <file foxpath="executionSummary1.xml" id="executionSummary1FileShape">
                <targetSize countMsg="Missing file: executionSummary1.xml" count="1"/>      
                <focusNode xpath="//input">
                    <targetSize countMsg="Missing element: input" count="1"/>
                    <!-- Compare the <input> element with the <input> element found in another file -->
                    <docSimilar foxpath="..\executionSummary2.xml//input"  redReport="localIndexedPath"
                        countTargetResources="1" countTargetResourcesMsg="Reference document missing">
                        <!-- When comparing the elements, ignore @fileName and @fileSize, 
                             and normalize the value of <articleNumber>. -->
                        <editText localName="articleNumber" replaceSubstring="^678.*$" replaceWith="678XXX"/>
                        <skipItem kind="attribute" localName="fileName"/>
                        <skipItem kind="attribute" localName="fileSize"/>
                    </docSimilar>
                </focusNode>
            </file>
        </folder>
    </domain>

</greenfox>
