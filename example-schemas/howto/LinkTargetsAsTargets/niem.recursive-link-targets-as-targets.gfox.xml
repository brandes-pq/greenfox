<?xml version="1.0" encoding="UTF-8"?>
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/oxygen/check-catalog"
    xmlns="http://www.greenfox.org/ns/schema">
    
    <context>
        <field name="domain"/>
    </context>
    
    <domain path="${domain}" name="greenfox-example-data">
        <folder path=".\niem\domains" id="niemCoreFolderShape">
            <targetSize countMsg="Missing folder: domains" count="1"/>            
            <file foxpath=".\\screening.xsd" id="intelligenceFileShape">
                <file recursiveLinkXPath="/xs:schema/xs:import/@schemaLocation" id="niemCoreFileShape">
                    <targetSize minCount="70" minCountMsg="Not expected number of link targets"/>
                    <xpath expr="/xs:schema/@targetNamespace"
                           exists="true"
                           existsMsg="Missing tns"/>
                </file>
            </file>
        </folder>
    </domain>
    
</greenfox>
