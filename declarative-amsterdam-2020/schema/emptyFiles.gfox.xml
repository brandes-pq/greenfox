<?xml version="1.0" encoding="UTF-8"?>
<!--
    Detects empty files, using a FileSizeGt constraint. The domain can be specified
    explcitly (greenfox val?gfox=...,domain=\path\to\domain), or the default value
    is used specified in the context parameter $domain.
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/declarative-amsterdam2020/emptyFiles"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\data\with-empty-file"/>
    </context>
    
    <domain path="${domain}" name="Some root folder">
        <folder foxpath="." id="rootFolderShape">
            <targetSize countMsg="Missing folder" count="1"/>            
            <file foxpath=".\\*" id="fileShape">
                <targetSize minCount="1" minCountMsg="At least one file expected"/>
                <fileSize gt="0" gtMsg="Empty files not allowed"/>                
            </file>
        </folder>
    </domain>

</greenfox>

